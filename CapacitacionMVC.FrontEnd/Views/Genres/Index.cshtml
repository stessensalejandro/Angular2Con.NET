@model CapacitacionMVC.FrontEnd.Models.GenresViewModel
@{
    ViewBag.Title = "Genres";
}

<h2>Genres</h2>
<div class="col-sm-12">
    @using (Html.BeginForm("Search", "Genres"))
    {
    <div class="form-group">
        @Html.LabelFor(m => m.SearchValue)
        @Html.TextBoxFor(m => m.SearchValue, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <button type="submit">Search</button>
    </div>
    }
</div>
<div class="col-sm-12">
    <div class="row">
        <div class="col-sm-12"><strong>Genres</strong></div>
    </div>
    @foreach (var genre in Model.Genres)
    {
        <div class="row">
            <div class="col-sm-12">@genre.Name</div>
        </div>
    }
</div>
